rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // OPEN PERMISSIONS - DEVELOPMENT/TESTING ONLY
    // WARNING: This allows ALL read/write access!
    // DO NOT USE IN PRODUCTION!
    // ============================================
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
